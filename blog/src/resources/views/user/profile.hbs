<div class="mt-4">
    <h3 style="text-align: center" >Thông tin tài khoản</h3>
    <form method="POST" action="/user/{{info._id}}">
        <div class="form-group">
            <label for="fullname" class="form-label">Họ Tên:</label>
            <input type="text" class="form-control" id="fullname" name="fullname" value="{{info.fullname}}">
        </div>
        <div class="form-group">
            <label for="phone" class="form-label">Số Điện Thoại:</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{info.phone}}">
        </div>
        <div class="form-group">
            <label for="address" class="form-label">Địa Chỉ:</label>
            <input type="text" class="form-control" id="address" name="address" value="{{info.address}}">
        </div>
        <div class="form-group">
            <p>Giới Tính:</p>
            {{#if gender}}
            <input type="radio" id="gender" name="gender" checked="checked" value="true">
            <label for="">Nam</label><br>
            <input type="radio" id="gender" name="gender" value="false">
            <label for="css">Nữ</label><br>
            {{else}}
            <input type="radio" id="gender" name="gender"  value="true">
            <label for="html">Nam</label><br>
            <input type="radio" id="gender" name="gender" checked="checked" value="false">
            <label for="css">Nữ</label><br>
            {{/if}}
        </div>
        <button type="submit" class="btn btn-primary">Cập Nhật</button>
        </form>
</div>