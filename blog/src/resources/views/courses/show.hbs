<div class="mt4"  style="margin-top:50px">
    <form method="POST" action="/cart/add">
        <div style="display: flex; flex-direction: row;">

            <div>
                <div class="form-group">
                    <input type="text"  style="display: none;" class="form-control" id="image" name="image" value="{{course.image}}">
                    <img style="width: 200px;" src="{{course.image}}" alt="">
                </div>

            </div>
            <div style="margin-left: 50px;">
                <div class="form-group">
                    <label style="font-size: 60px;" style="color: black;" for="name" class="form-label">{{course.name}}</label>
                    <input style="display: none;" type="text" class="form-control" id="name" name="name" value="{{course.name}}">
                </div>
                <div class="form-group">
                    <input style="display: none;" type="text" class="form-control" id="user" name="user" value="{{lcUser}}">
                </div>
                
                <div class="form-group">
                    <label style="color: red;" for="level" class="form-label"> Giá: {{course.price}} Đ </label>
                    <input style="display: none;" type="text" class="form-control" id="price" name="price" value="{{course.price}}">
                </div>
                <div class="form-group">
                    <label  style="color: black;" for="quantity"> Số Lượng: </label>
                    <input  style="color: black;" type="number" id="quantity" name="quantity" min="1" max="5"> 
                </div>
                <button type="submit" class="btn btn-primary">Thêm Vào Giỏ Hàng</button>

            </div>
        </div>
        <div class="form-group" style="margin-top:50px">
            <label style="color: black;" for="description" class="form-label">{{course.description}}</label>
        </div>
    </form>

    



       
</div>